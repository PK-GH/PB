<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/watercolorblue"
    tools:context=".MainActivity">
    <!-- Test GH-->

    <!-- for the Start screen




    -->

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Hello World!" />

    <ImageView
        android:id="@+id/powericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/poweroff"
        />

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_above="@+id/functionButton"
        android:layout_centerHorizontal="true"
        android:text="@string/button_start_text"
        android:textSize="32sp"
        android:onClick="OnStartClick"
        />


    <Button
        android:id="@+id/functionButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_above="@+id/settingButton"
        android:layout_centerHorizontal="true"
        android:text="@string/button_functions_text"
        android:textSize="20sp" />


    <Button
        android:id="@+id/settingButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_above="@+id/helpButton"
        android:layout_centerHorizontal="true"
        android:text="@string/button_settings_text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:text="@string/button_help_text"
        android:textSize="20sp" />


</RelativeLayout>